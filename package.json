{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "author": "Stanislav Salnikov",
  "license": "ISC",
  "description": "",
  "source": "static/index.html",
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint"
    }
  },
  "scripts": {
    "clean:dist": "rimraf dist",
    "dev": "npx parcel static/index.html --no-cache",
    "prebuild": "npm run clean:dist",
    "build": "npx parcel build static/index.html",
    "prestart": "npm run clean:dist",
    "start": "npx parcel build static/index.html --no-cache && node server.js",
    "lint": "npm-run-all lint:js-fix lint:css-fix",
    "lint:js": "eslint src",
    "lint:js-fix": "eslint src --fix",
    "lint:css": "npx stylelint '**/*.scss'",
    "lint:css-fix": "npx stylelint '**/*.scss' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git@study:salnikovss/middle.messenger.praktikum.yandex.git"
  },
  "keywords": [],
  "alias": {
    "core": "./src/core",
    "components": "./src/components",
    "helpers": "./src/helpers",
    "pages": "./src/pages",
    "config": "./src/config",
    "utils": "./src/utils",
    "services": "./src/services",
    "api": "./src/api",
    "store": "./src/store"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.7.0",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "eslint": "8.23.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "husky": "^8.0.1",
    "nanoid": "4.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "2.7.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "sass": "1.54.9",
    "stylelint": "14.12.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-scss": "4.3.0",
    "typescript": "4.8.3",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  }
}
