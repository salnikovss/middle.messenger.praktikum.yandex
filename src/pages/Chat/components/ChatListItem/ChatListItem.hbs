<div class='user-list-item {{#if selected}}user-list-item_selected{{/if}}' data-id='{{id}}'>
  <div class='user-list-item__avatar'>
    <span class='user-list-item__avatar-image' 
        {{#if avatar}}style='background-image:url({{avatar}})'{{/if}}></span>
  </div>

  <div class='user-list-item__data'>
    <div class='user-list-item__row'>
        <p class='user-list-item__name'>{{name}}</p>
        <p class='user-list-item__date'>{{lastMessageTime}}</p>  
    </div>

    <div class='user-list-item__row user-list-item__row_full-height'>
        <p class='user-list-item__alt'>{{alt}}</p>
        <p class='user-list-item__unread-count'>
            {{#if unreadMessages}}
                <span>{{unreadMessages}}</span>
            {{/if}} 
        </p>   
    </div>
  </div>
</div>